{
  "name": "fluxxchat-palvelin",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:FluxxChat/FluxxChat-palvelin",
  "author": "Olavi Mustanoja <tilastokeskus@gmail.com>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "tsc && cp -r i18n dist/",
    "build:watch": "tsc -w && cp -r i18n dist/",
    "start": "node ./dist/index.js",
    "start:watch": "nodemon ./dist/index.js",
    "commit": "git-cz",
    "lint": "tslint --fix \"src/**/*.ts\"",
    "heroku-postbuild": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "@types/ws": "^6.0.1",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.1"
  },
  "dependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "express": "^4.16.4",
    "fluxxchat-protokolla": "git://github.com/FluxxChat/FluxxChat-protokolla.git",
    "husky": "^1.3.1",
    "localize": "^0.4.7",
    "ws": "^6.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
